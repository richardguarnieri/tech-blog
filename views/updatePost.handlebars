{{!-- Update Post --}}
<section id="update-post" class="post">
    <form action="/api/blogs/update" method="POST">
        <fieldset>
            <legend>Update Post</legend>
            <div class="form-input">
                <label for="post-title">Post Title</label>
                <input type="text" name="title" id="post-title" placeholder="Post Title" required>
            </div>
            <div class="form-input">
                <label for="post-content">Content</label>
                <textarea name="content" id="post-content" cols="30" rows="10"></textarea>
            </div>
            <div class="form-submission justify-end">
                <button type="submit">Update Post</button>
                <button class="bg-red-500">Delete Post</button>
            </div>
        </fieldset>
    </form>
</section> 