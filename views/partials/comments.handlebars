{{!-- Comments --}}
<section id="comments" class="comments hidden">
    <legend class="m-0">Comments</legend>
    {{#each this.comments as |comment|}}
    <article class="comment">
        <div class="comment-content">
            <p class="article-content">{{comment.content}}</p>
            <br>
            <p class="article-content">Posted by: {{comment.user.username}} | Date: {{comment.createdAt}}</p>
        </div>
    </article>
    {{/each}}
</section> 