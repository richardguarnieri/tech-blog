{{!-- Add Comment --}}
<section id="add-comment" class="post hidden">
    <form action="/api/comments/add" method="POST">
        <fieldset>
            <legend class="legendGray">Add Comment</legend>
            <div class="form-input">
                <label for="comment-content">Comment</label>
                <textarea name="content" id="comment-content" cols="30" rows="10"></textarea>
            </div>
            {{!-- Helper Textarea (to pass the blogId) --}}
            <div class="form-input d-none">
                <textarea name="blogId" cols="30" rows="10">{{this.id}}</textarea>
            </div>
            <div class="form-submission justify-end">
                <button type="submit">Submit</button>
            </div>
        </fieldset>
    </form>
</section>